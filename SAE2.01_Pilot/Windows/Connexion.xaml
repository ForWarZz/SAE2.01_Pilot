<Window
    x:Class="SAE2._01_Pilot.Windows.Connexion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Pilot.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Connexion"
    Width="811"
    Height="834"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid x:Name="spMainWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="74" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel x:Name="spTop" Background="#FF005EA5">
            <Image
                Width="165"
                Height="44"
                Margin="20,0,0,0"
                DockPanel.Dock="Left"
                Source="/Images/pilot.png" />
            <TextBlock
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                FontFamily="Roboto"
                FontSize="16"
                Foreground="White"
                Text="Non connectée au système central" />
        </DockPanel>

        <StackPanel
            x:Name="spContent"
            Grid.Row="1"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <Border
                Margin="100,0,100,0"
                Padding="0"
                Background="#FFF2F2F2"
                CornerRadius="15">

                <StackPanel
                    x:Name="spConnexion"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <Border Background="#FF005EA5" CornerRadius="15,15,0,0">
                        <TextBlock
                            Margin="0,30,0,30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Roboto"
                            FontSize="24"
                            Foreground="White"
                            Text="Connexion au système central" />
                    </Border>

                    <StackPanel x:Name="spFormulaireLogin" Margin="50,20,50,20">
                        <StackPanel>
                            <Label
                                Margin="0,0,0,15"
                                Content="_Identifiant :"
                                FontFamily="Roboto"
                                FontSize="24"
                                Target="{Binding inputLogin}" />
                            <TextBox x:Name="inputLogin" Style="{StaticResource TextBoxStyle}" />
                        </StackPanel>

                        <StackPanel Margin="0,50,0,0">
                            <Label
                                Margin="0,0,0,15"
                                Content="_Mot de passe :"
                                FontFamily="Roboto"
                                FontSize="24"
                                Target="{Binding inputPassword}" />
                            <PasswordBox x:Name="inputPassword" Style="{StaticResource PasswordBoxStyle}" />
                        </StackPanel>

                        <Button
                            x:Name="btnLogin"
                            Margin="0,50,0,0"
                            HorizontalAlignment="Right"
                            Click="btnLogin_Click"
                            Content="Se connecter"
                            IsDefault="True"
                            Style="{StaticResource PrimaryButtonStyle}" />
                    </StackPanel>

                </StackPanel>
            </Border>

        </StackPanel>

    </Grid>
</Window>
