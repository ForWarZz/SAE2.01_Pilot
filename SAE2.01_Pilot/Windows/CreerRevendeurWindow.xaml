<Window
    x:Class="SAE2._01_Pilot.Windows.CreerRevendeurWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Pilot.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Créer un revendeur"
    Width="690"
    Height="835"
    mc:Ignorable="d">
    <Grid x:Name="spMainWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="74" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel
            x:Name="spTop"
            Height="72"
            Background="#FF005EA5">
            <Image
                Width="165"
                Height="44"
                Margin="20,0,0,0"
                HorizontalAlignment="Left"
                Source="/Images/pilot.png" />
            <TextBlock
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                DockPanel.Dock="Right"
                FontFamily="Roboto"
                FontSize="16"
                Foreground="White"
                Text="Connecté au système central" />
        </DockPanel>
        <StackPanel VerticalAlignment="Center" x:Name="spFormulaire" Margin="100,0,100,0" Grid.Row="1">
            <TextBlock x:Name="txtTitre"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="32"
                Margin="0,0,0,50"
                FontWeight="Medium"
                Text="Créer un revendeur" />

            <Label Content="R_aison sociale" FontSize="20" Target="{Binding inputRaisonSociale}" />
            <TextBox x:Name="inputRaisonSociale" Style="{StaticResource TextBoxStyle}" Text="{Binding RaisonSociale, ValidatesOnExceptions=True}" />
            
            <Label Margin="0, 20, 0, 0" Content="_Rue" FontSize="20" Target="{Binding inputRue}" />
            <TextBox x:Name="inputRue" Style="{StaticResource TextBoxStyle}"  Text="{Binding Adresse.Rue, ValidatesOnExceptions=True}" />
            
            <Label Margin="0, 20, 0, 0" Content="_Code postal" FontSize="20" Target="{Binding inputCP}" />
            <TextBox x:Name="inputCP" Style="{StaticResource TextBoxStyle}"  Text="{Binding Adresse.CodePostal, ValidatesOnExceptions=True}" />
            
            <Label Margin="0, 20, 0, 0" Content="_Ville" FontSize="20" Target="{Binding inputVille}" />
            <TextBox x:Name="inputVille" Style="{StaticResource TextBoxStyle}"  Text="{Binding Adresse.Ville, ValidatesOnExceptions=True}" />

            <Button IsDefault="True" x:Name="btnCreer" Margin="0,50, 0, 0" HorizontalAlignment="Center" Content="Créer un revendeur" Style="{StaticResource PrimaryButtonStyle}" Click="btnCreer_Click" />
        </StackPanel>
    </Grid>
</Window>
