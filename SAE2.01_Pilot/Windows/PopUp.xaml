<Window
    x:Class="SAE2._01_Pilot.Windows.PopUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Pilot.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PopUp"
    Width="400"
    Height="200"
    AllowsTransparency="True"
    Background="White"
    MouseLeftButtonDown="Window_MouseLeftButtonDown"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>


            <Grid Grid.Row="0" Background="#FF005EA5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label
                    x:Name="labTitre"
                    Grid.Column="0"
                    Margin="30,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Content=""
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White" />

                <Button
                    Grid.Column="1"
                    Width="30"
                    Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="CloseButton_Click"
                    Content="✕"
                    Cursor="Hand"
                    FontWeight="Bold"
                    Foreground="White" />
            </Grid>

            <DockPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="378">
                <Image x:Name="ImgagePopUp" Width="64" HorizontalAlignment="Left" />
                <TextBlock x:Name="tbMessage" VerticalAlignment="Center" FontFamily="Roboto" FontSize="14" Margin="10,0,0,0" TextWrapping="Wrap" />
            </DockPanel>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Right"
                Orientation="Horizontal" Margin="0,0,15,10">
                <Button
                    x:Name="butSecondaire"
                    Width="90"
                    Height="30"
                    Margin="0,0,10,0"
                    Padding="0,0,0,0"
                    HorizontalAlignment="Right"
                    Content="Non"
                    FontSize="14"
                    Style="{StaticResource SecondaryButtonStyle}" Click="butSecondaire_Click" />
                <Button
                    x:Name="butPrincipale"
                    Width="90"
                    Height="30"
                    Padding="0,0,0,0"
                    Content="Oui"
                    FontSize="14"
                    Style="{StaticResource PrimaryButtonStyle}" Click="butPrincipale_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
