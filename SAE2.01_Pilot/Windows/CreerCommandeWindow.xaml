<Window
    x:Class="SAE2._01_Pilot.Windows.CreerCommandeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:SAE2._01_Pilot.Windows"
    Title="Créer une commande"
    Width="690"
    Height="988"
    mc:Ignorable="d">
    <Grid x:Name="spMainWindow">
        <Grid.RowDefinitions>
            <RowDefinition Height="74" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Bandeau bleu -->
        <DockPanel Height="72" Background="#FF005EA5">
            <Image Width="165"
                   Height="44"
                   Margin="20,0,0,0"
                   HorizontalAlignment="Left"
                   Source="/Images/pilot.png" />
            <TextBlock Margin="0,0,20,0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       DockPanel.Dock="Right"
                       FontFamily="Roboto"
                       FontSize="16"
                       Foreground="White"
                       Text="Connecté au système central" />
        </DockPanel>

        <!-- Formulaire -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" x:Name="spFormulaire" Margin="50,30,50,30">
                <TextBlock x:Name="txtTitre"
                           HorizontalAlignment="Center"
                           FontSize="32"
                           Margin="0,0,0,30"
                           FontWeight="Medium"
                           Text="Créer une commande" />

                <StackPanel Orientation="Vertical" Margin="0, 0, 0, 20">
                    <Label Content="_Revendeur" Target="{Binding btnSelectRevendeur}" />
                    <Button x:Name="btnSelectRevendeur"
                            Content="Sélectionner un revendeur"
                            Style="{StaticResource SecondaryButtonStyle}" Click="btnSelectRevendeur_Click" />
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0, 0, 0, 20">
                    <Label Content="_Mode de transport" Target="{Binding cbTransport}" />
                    <ComboBox x:Name="cbTransport" Height="40" DisplayMemberPath="Libelle" SelectedValuePath="Id" />
                </StackPanel>

                <Border BorderBrush="#ccc" BorderThickness="1" Padding="15" Margin="0, 0, 0, 20" CornerRadius="8">
                    <StackPanel>
                        <TextBlock FontSize="18" FontWeight="Medium" Text="Ajouter une ligne de commande" Margin="0, 0, 0, 10" />

                        <StackPanel Orientation="Vertical" Margin="0, 0, 0, 10">
                            <Label Content="_Produit" Target="{Binding btnSelectProduit}" />
                            <Button x:Name="btnSelectProduit"
                                    Content="Sélectionner un produit"
                                    Style="{StaticResource SecondaryButtonStyle}" Click="btnSelectProduit_Click" />
                        </StackPanel>

                        <StackPanel Orientation="Vertical" Margin="0, 0, 0, 10">
                            <Label Content="_Quantité souhaitée" Target="{Binding inputQuantite}" />
                            <TextBox x:Name="inputQuantite"
                                     Style="{StaticResource TextBoxStyle}"
                                     Text="{Binding Quantite}" />
                        </StackPanel>

                        <Button x:Name="btnAjouterLigne"
                                Content="Ajouter la ligne"
                                HorizontalAlignment="Right"
                                Style="{StaticResource PrimaryButtonStyle}" Click="btnAjouterLigne_Click" />
                    </StackPanel>
                </Border>

                <DataGrid x:Name="dgLignesCommande"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Height="200"
                          Margin="0,0,0,20">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Code produit" Binding="{Binding Produit.Code}" Width="*" />
                        <DataGridTextColumn Header="Nom produit" Binding="{Binding Produit.Nom}" Width="*" />
                        <DataGridTextColumn Header="Prix" Binding="{Binding Produit.PrixVente}" Width="60" />
                        <DataGridTextColumn Header="Quantité" Binding="{Binding Quantite}" Width="120" />
                        <DataGridTemplateColumn Header="Supprimer" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="❌"
                                            Padding="5"
                                            Command="{Binding DataContext.SupprimerLigneCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button x:Name="btnCreer"
                        HorizontalAlignment="Center"
                        Content="Créer la commande"
                        Style="{StaticResource PrimaryButtonStyle}" Click="btnCreer_Click" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>