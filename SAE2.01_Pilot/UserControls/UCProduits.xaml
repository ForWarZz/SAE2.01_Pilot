<UserControl
    x:Class="SAE2._01_Pilot.UserControls.UCProduits"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Pilot.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="685"
    d:DesignWidth="1194"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="20,15"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <StackPanel
                Grid.Row="0"
                Orientation="Horizontal">
                <StackPanel Margin="0,0,30,0" VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontFamily="Roboto"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="Rechercher" />
                    <TextBox
                        Width="300"
                        Style="{StaticResource RechercherTBStyle}" />
                </StackPanel>

                <StackPanel
                    Margin="0,0,30,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontFamily="Roboto"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="Catégorie" />
                    <ComboBox
                        x:Name="cbCategorie"
                        Height="40"
                        DisplayMemberPath="Libelle"
                        SelectedValuePath="Id" />
                </StackPanel>

                <StackPanel
                    x:Name="spTypeProduitFiltre"
                    Margin="0,0,30,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontFamily="Roboto"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="Type" />
                    <ComboBox
                        x:Name="cbType"
                        Height="40"
                        DisplayMemberPath="Libelle"
                        SelectedValuePath="Id" />
                </StackPanel>

                <StackPanel
                    Margin="0,0,30,0"
                    VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontFamily="Roboto"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="Pointe" />
                    <ComboBox
                        x:Name="cbTypePointe"
                        Height="40"
                        DisplayMemberPath="Libelle"
                        SelectedValuePath="Id" />
                </StackPanel>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        Margin="0,0,0,5"
                        FontFamily="Roboto"
                        FontSize="16"
                        FontWeight="Medium"
                        Text="Couleur" />
                    <ComboBox
                        x:Name="cbCouleur"
                        Height="40"
                        DisplayMemberPath="Libelle"
                        SelectedValuePath="Id" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Margin="20,15"
            Background="White"
            CornerRadius="4">
            <DataGrid
                x:Name="dgProduits"
                SelectionChanged="dgProduits_SelectionChanged">

                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding Code}"
                        Header="Code produit" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Nom}"
                        Header="Nom produit" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding TypePointe.Libelle}"
                        Header="Type pointe" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Type.Libelle}"
                        Header="Type produit" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding CouleursString}"
                        Header="Couleurs" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding QuantiteStock}"
                        Header="Quantité en stock" />
                    <DataGridCheckBoxColumn
                        Width="*"
                        Binding="{Binding Disponible}"
                        Header="Disponible" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border
            Grid.Row="2"
            Padding="20,25"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0">
            <DockPanel>
                <StackPanel
                    Grid.Row="2"
                    Margin="0,0,15,0"
                    Orientation="Horizontal"
                    DockPanel.Dock="Left">
                    <Button
                        x:Name="butModifierProduit"
                        Width="120"
                        Margin="0,0,15,0"
                        Content="Modifier"
                        IsEnabled="False"
                        Style="{StaticResource SecondaryButtonStyle}" />
                    <Button
                        x:Name="butRendreIndisponibleProduit"
                        Width="120"
                        Margin="0,0,15,0"
                        Content="Indisponible"
                        IsEnabled="False"
                        Style="{StaticResource SupprButtonStyle}" />
                </StackPanel>

                <Button
                    x:Name="butAddProduit"
                    Width="200"
                    Content="Créer un produit"
                    Style="{StaticResource PrimaryButtonStyle}"
                    HorizontalAlignment="Right"
                    Click="butAddProduit_Click"
                    DockPanel.Dock="Right" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>