<UserControl x:Class="SAE2._01_Pilot.UserControls.UCVisualiserProduit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SAE2._01_Pilot.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="685" d:DesignWidth="1194">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DockPanel x:Name="dpTitre" HorizontalAlignment="Center" Grid.Row="0" Margin="0,25,0,0">
            <TextBlock x:Name="labVisuProduit" Text="Visualiser " FontSize="30" HorizontalAlignment="Center"/>
            <TextBlock x:Name="labProduitAVisualiser" Text="{Binding Nom}" FontSize="30" HorizontalAlignment="Center"/>
        </DockPanel>
        <Border Grid.Row="1" Padding="20,25" BorderBrush="#E0E0E0" BorderThickness="1,1,1,1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel x:Name="spInfos" VerticalAlignment="Center">
                <StackPanel x:Name="spCodeProduit" Orientation="Horizontal">
                    <Label Content="Code produit : " FontSize="22"/>
                    <TextBlock x:Name="labCodeProduit" Text="{Binding Code}" FontSize="22"/>
                </StackPanel>
                <StackPanel x:Name="spNomProduit" Orientation="Horizontal">
                    <Label Content="Nom : " FontSize="22"/>
                    <TextBlock x:Name="labNomProduit" Text="{Binding Nom}" FontSize="22"/>
                </StackPanel>
                <StackPanel x:Name="spCouleurProduit" Orientation="Horizontal">
                    <Label Content="Couleurs : " FontSize="22"/>
                    <TextBlock x:Name="labCouleurProduit" Text="{Binding CouleursString}" FontSize="22"/>
                </StackPanel>
                <StackPanel x:Name="spCategorieProduit" Orientation="Horizontal">
                    <Label Content="Catégorie : " FontSize="22"/>
                    <TextBlock x:Name="labCategorieProduit" Text="{Binding Type.Categorie.Libelle}" FontSize="22"/>
                </StackPanel>
                <StackPanel x:Name="spTypeProduit" Orientation="Horizontal">
                    <Label Content="Type : " FontSize="22"/>
                    <TextBlock x:Name="labTypeProduit" Text="{Binding Type.Libelle}" FontSize="22"/>
                </StackPanel>
                <StackPanel x:Name="spTypePointeProduit" Orientation="Horizontal">
                    <Label Content="Type pointe : " FontSize="22"/>
                    <TextBlock x:Name="labTypePointeProduit" Text="{Binding TypePointe.Libelle}" FontSize="22"/>
                </StackPanel>
                <StackPanel x:Name="spPrixProduit" Orientation="Horizontal">
                    <Label Content="Prix : " FontSize="22"/>
                    <TextBlock x:Name="labPrixProduit" Text="{Binding PrixVente, StringFormat={}{0:F2} €}}" FontSize="22"/>
                </StackPanel>
                <StackPanel x:Name="spQuantiteProduit" Orientation="Horizontal">
                    <Label Content="Quantité en stock : " FontSize="22"/>
                    <TextBlock x:Name="labQuantiteProduit" Text="{Binding QuantiteStock}" FontSize="22"/>
                </StackPanel>
            </StackPanel>
        </Border>
        <DockPanel x:Name="dpBouton" Grid.Row="2">
            <Button Margin="20,25" x:Name="butRetour" Content="Retour" Style="{StaticResource PrimaryButtonStyle}" Click="butRetour_Click" HorizontalAlignment="Right"/>
        </DockPanel>
    </Grid>
</UserControl>
