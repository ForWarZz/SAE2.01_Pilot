<UserControl
    x:Class="SAE2._01_Pilot.UserControls.UCRevendeurs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Pilot.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="685"
    d:DesignWidth="1194"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="0"
            Padding="20,15"
            BorderBrush="#E0E0E0"
            BorderThickness="0,0,0,1">
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <StackPanel Margin="0,0,30,0" VerticalAlignment="Center">
                    <Label
                        Margin="0,0,0,5"
                        Content="_Rechercher"
                        FontFamily="Roboto"
                        FontSize="16"
                        FontWeight="Medium"
                        Target="{Binding ElementName=txtRecherche}" />
                    <TextBox
                        x:Name="txtRecherche"
                        Width="300"
                        Style="{StaticResource RechercherTBStyle}"
                        TextChanged="txtRecherche_TextChanged" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border
            Grid.Row="1"
            Margin="20,15"
            Background="White"
            CornerRadius="4">
            <DataGrid x:Name="dgRevendeur" SelectionChanged="dgRevendeur_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding RaisonSociale}"
                        Header="Raison sociale" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Adresse.Rue}"
                        Header="Rue" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Adresse.CodePostal}"
                        Header="Code postal" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Adresse.Ville}"
                        Header="Ville" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Border
            Grid.Row="2"
            Padding="20,25"
            BorderBrush="#E0E0E0"
            BorderThickness="0,1,0,0">
            <StackPanel
                Grid.Row="2"
                Margin="0,0,15,0"
                HorizontalAlignment="Right"
                Orientation="Horizontal">
                <Button
                    x:Name="butModifierRevendeur"
                    Width="120"
                    Margin="0,0,15,0"
                    Click="butModifierRevendeur_Click"
                    Content="Modifier"
                    Style="{StaticResource SecondaryButtonStyle}"
                    Visibility="Hidden" />
                <Button
                    x:Name="butAddRevendeur"
                    Width="180"
                    Click="butAddRevendeur_Click"
                    Content="Créer un revendeur"
                    Style="{StaticResource PrimaryButtonStyle}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
