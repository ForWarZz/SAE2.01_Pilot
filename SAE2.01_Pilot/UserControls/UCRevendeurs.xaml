<UserControl
    x:Class="SAE2._01_Pilot.UserControls.UCRevendeurs"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SAE2._01_Pilot.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="685"
    d:DesignWidth="1194"
    mc:Ignorable="d">
    <StackPanel x:Name="spMain">
        <DockPanel
            x:Name="dpRecherche"
            Height="80"
            Margin="0,38,0,0"
            HorizontalAlignment="Left">
            <TextBox
                Width="316"
                Height="47"
                Margin="20,0,37,0"
                Style="{StaticResource RechercherTBStyle}" />
        </DockPanel>
        <StackPanel />
        <StackPanel x:Name="spContent" Height="432">
            <DataGrid
                x:Name="dgRevendeur"
                Width="594"
                Height="298"
                Margin="0,100,0,0"
                HorizontalAlignment="Center"
                IsEnabled="False"
                IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding RaisonSociale}"
                        Header="Raison sociale" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Rue}"
                        Header="Rue" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding CodePostal}"
                        Header="Code postal" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Ville}"
                        Header="Ville" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <DockPanel x:Name="spActions" Height="135">
            <Button
                x:Name="butMofifierRevendeur"
                Margin="50,0,0,40"
                VerticalAlignment="Bottom"
                Content="Modifier"
                IsEnabled="False"
                Style="{StaticResource SecondaryButtonStyle}" />
            <Button
                x:Name="butAddRevendeur"
                Margin="0,0,50,40"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="Créer un revendeur"
                Style="{StaticResource PrimaryButtonStyle}" />
        </DockPanel>
    </StackPanel>
</UserControl>
